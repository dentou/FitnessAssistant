<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:contentPadding="16dp"
        app:cardElevation="8dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bodyindex_percentfat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="% Fat: 25.3%" />

            <TextView
                android:id="@+id/bodyindex_fatmass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Fat Mass: 25.3 kg" />

            <TextView
                android:id="@+id/bodyindex_musclemass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Muscle Mass: 25.3 kg" />

            <TextView
                android:id="@+id/bodyindex_bmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="BMI: 12.87 kg/m^2" />

            <TextView
                android:id="@+id/bodyindex_bmr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="BMI: 200.2 kcal/day"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timeline_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:line="@color/colorPrimaryDark"
        app:lineOrientation="horizontal"
        app:lineSize="3dp"
        app:marker="@drawable/ic_timeline_marker"
        app:markerSize="20dp" />

    <TextView
        android:id="@+id/bodyindex_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Mon, 21 Sep 2018" />


</LinearLayout>